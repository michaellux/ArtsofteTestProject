@model ArtsofteTestProject.ViewModels.AddEmployeePageViewModel;
@{
    ViewData["Title"] = "Adding an language";
}
<div class="text-center">
    <h1 class="display-4 main__add">@ViewData["Title"]</h1>
    <div class="container">
        <div class="row">
            <div class="col-10">
                @using (Html.BeginForm())
                {
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.ProgrammingLanguage.Name, new { @class= "col-form-label col-sm-6" })
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="ProgrammingLanguage.Name" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="submit" value="Add" class="btn btn-success" />
                        <a href="/" class="btn btn-danger" role="button">Cancel</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $("[data-autocomplete-source]").each(function () {
                var target = $(this);
                target.autocomplete({ source: target.attr("data-autocomplete-source") });
            });
        });
    </script>
}
